@model ASM_Bicycle_Shops.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/css/Form.css" rel="stylesheet">
<h4>Edit Product</h4>
<hr />
<div class="container">
    <form asp-action="Edit" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductId" />
        <div class="form-group row">
            <div class="col-25">
                <label>Product Name:</label>
            </div>
            <div class="col-75">
                <input asp-for="ProductName" class="form-control" placeholder="Product name..." />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-25">
                <label class="control-label">Product Price:</label>
            </div>
            <div class="col-75">
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-25">
                <label class="control-label">Product Price Sale: </label>
            </div>
            <div class="col-75">
                <input asp-for="ProductPriceSale" class="form-control" />
                <span asp-validation-for="ProductPriceSale" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-25">
                <label class="control-label">Product Decription: </label>
            </div>
            <div class="col-75">
                <textarea asp-for="ProductDecription" class="form-control" style="height:200px"></textarea>
                <span asp-validation-for="ProductDecription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-25">
                <label asp-for="CategoryName" class="control-label">Category: </label>
            </div>
            <div class="col-75">
                <select class="form-select" asp-items="@ViewBag.category" asp-for="CategoryName">
                    <option value="null"> --- Please select category for product --- </option>
                </select>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-25">
                <label class="control-label">Status: </label>
            </div>
            <div class="col-75">
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-25">
                <label class="control-label">Img: </label>
            </div>
            <div class="col-75">
                <input type="file" asp-for="ImageFile" class="form-control-file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" style="margin-right: -10px;margin-bottom: 10px" />
            <a asp-action="Index" class="btn btn-outline-success" style="margin-bottom: 10px">Back to List</a>
        </div>
    </form>
</div>

