@model IEnumerable<ASM_Bicycle_Shops.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Data Tables</h1>
<p>
    <a class="btn btn-outline-success" asp-action="Create">Create New</a>
    <a class="btn btn-outline-warning " asp-action="ExportExcel" asp-controller="Products">Export Excel</a>
    @if (ViewBag.mess == "True")
    {
        <label class="text-success">Data ready to download</label>
    }
    else
    {
        <label class="text-danger">Please add data first</label>
    }
</p>
<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductPriceSale)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductDecription)
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            Img
                        </th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductPriceSale)
                            </td>
                            <td class="wrapper">
                                <p class="limitword-1">@Html.DisplayFor(modelItem => item.ProductDecription)</p>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                <img src="@Url.Content("~/UploadImg/" + item.EmpFileName)" height="120px" width="150px">
                            </td>
                            <td>
                                <a class="btn btn-info" style="margin-bottom: 5px;" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a><br>
                                <a class="btn btn-success" style="margin-bottom: 5px;" asp-action="Details" asp-route-id="@item.ProductId">Details</a><br>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a><br>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
<style>
    .wrapper {
        padding: 20px;
        max-width: 400px;
        margin: 50px auto;
    }

    .limitword-1 {
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }
</style>
