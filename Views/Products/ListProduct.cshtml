@*<div class="product_section ">*@
<div class="row">
    <div class="col-sm-12">
        <h1 class="product_taital">Our Products</h1>
    </div>
</div>
<form asp-controller="Products" asp-action="ListProduct">
    <div class="container">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for..." name="SearchString">
            <span class="input-group-btn">
                <button class="btn btn-search" type="submit"><i class="fa fa-search fa-fw"></i> Search</button>
            </span>
        </div>
    </div>
</form>

@*        <div class="news_section layout_padding">*@
<div class="container">
    <div class="news_section_2 layout_padding style=" style="margin-top: -50px;margin-bottom: 20px;">
        <div class="row">
            @foreach (var i in Model)
            {

                <div class="col-sm-4 py-2">
                    @*<div class="row">*@
                    @*<div class="box_main_1">*@
                    <div class="card" style="width: 300px">
                        <div class="d-flex justify-content-between p-3">
                            <p class="lead mb-0">@i.ProductName</p>
                        </div>
                        <img style="height:200px;" src="@Url.Content("~/UploadImg/" + i.EmpFileName)">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <p class="small"><a href="#!" class="text-muted">Price</a></p>
                                <p class="small text-danger"><s>$@i.ProductPrice</s></p>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">Discount price</h5>
                                <h5 class="text-dark mb-0">$@i.ProductPriceSale</h5>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <p class="text-muted mb-0">Available: <span class="fw-bold">@i.Status</span></p>
                                <div class="ms-auto text-warning">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>

                            </div>
                            <a class="btn btn-outline-secondary" asp-area="" asp-action="ProductDetails" asp-route-id="@i.ProductId" class="btn details px-auto">view details</a>
                            <a class="btn btn-outline-secondary" style="margin-left:13px" asp-controller="Cart" asp-action="Add" asp-route-id="@i.ProductId" class="btn cart px-auto">add to card</a>
                        </div>
                    </div>
                    @*</div>*@
                    @*</div>*@
                </div>

            }
        </div>
    </div>
</div>
